
int led1 = D7;
int led = D0;// Instead of writing D0 over and over again, we'll write led1
// You'll need to wire an LED to this one to see it blink.



void setup() {


  pinMode(led1, OUTPUT);
  pinMode(led, OUTPUT);
  

}

// Next we have the loop function, the other essential part of a microcontroller program.
// This routine gets repeated over and over, as quickly as possible and as many times as possible, after the setup function is called.
// Note: Code that blocks for too long (like more than 5 seconds), can make weird things happen (like dropping the network connection).  The built-in delay function shown below safely interleaves required background activity, so arbitrarily long delays can safely be done if you need them.

void loop() {
  // To blink the LED, for letter A
digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300

digitalWrite(led,HIGH);
delay (900); 
digitalWrite(led,LOW); 
delay (300);//the dash this code make the led on for 900 than off for 300


 // To blink the LED, for letter S
digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300

digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300

digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300

  
   // To blink the LED, for letter H
digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300
digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300
digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300
digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300
   
   
   
    // To blink the LED, for letter A
    
digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300

digitalWrite(led,HIGH);
delay (900); 
digitalWrite(led,LOW); 
delay (300);//the dash this code make the led on for 900 than off for 300    
    
 // To blink the LED, for letter R
 
 digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300

digitalWrite(led,HIGH);
delay (900); 
digitalWrite(led,LOW); 
delay (300);//the dash this code make the led on for 900 than off for 300 
  
  
digitalWrite(led1,HIGH);
delay (300); 
digitalWrite(led1,LOW); 
delay (300);//the dot this code make the led on for 300 than off for 300  
  
}
